{
	"include":
	[
		"*"
	],
	"compilerOptions":
	{
		//Please change this section as your project requires
		"rootDir": ".",
		"outDir": "../webroot/js",
		"declarationDir": "../webroot/js/types",
		"baseUrl": "./modules",
		"lib":
			["es5", "dom",
			 "es2015.symbol.wellknown"],

		//Please refrain from changing below without due consideration
		"declaration": true,
		"sourceMap": true,
		"module": "system",
		"target": "es5",
		"noFallthroughCasesInSwitch": true,
		"traceResolution": true,

		// The following are considered team/org policy, please do not disable
		"forceConsistentCasingInFileNames": true,
		"listFiles": true,
		"newLine": "CRLF",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true
	}
}
